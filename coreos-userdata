#cloud-config

coreos:
  etcd:
      discovery: http://172.17.8.100:4001/v2/keys/testcluster
      name: docker-image-builder
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API

        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both

        [Install]
        WantedBy=sockets.target
    - name: image-builder-service.service
      command: start
      runtime: no
      enable: true
      content: |
        [Unit]
        Description=Image Builder Service
        After=docker.service
        Requires=docker.service

        [Service]
        ExecStartPre=/bin/bash -c 'if [ ! -d "/var/lib/docker-image-builder" ]; then git clone https://github.com/INAETICS/docker-image-builder.git /var/lib/docker-image-builder; else cd /var/lib/docker-image-builder; git pull; fi'
        ExecStart=/var/lib/docker-image-builder/image-builder-service -v
        TimeoutSec=600
        Restart=always
        RestartSec=10

        [Install]
        WantedBy=multi-user.target
    - name: image-builder-announce.service
      command: start
      runtime: no
      enable: true
      content: |
        [Unit]
        Description=Image Builder Announce
        BindsTo=image-builder-service.service

        [Service]
        ExecStart=/bin/sh -c "while true; do etcdctl set /inaetics/image-builder-service/%m $public_ipv4:8080 --ttl 60; sleep 45; done"
        ExecStopPost=/usr/bin/etcdctl rm /inaetics/image-builder-service/%m

        [Install]
        WantedBy=multi-user.target
